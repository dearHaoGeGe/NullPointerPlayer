<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#739BE1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_net_song_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/btn_back_to_meun_focus" />

        <TextView
            android:id="@+id/textView_net_song_bar_title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imageView_net_song_back"
            android:layout_toRightOf="@+id/imageView_net_song_back"
            android:ellipsize="end"
            android:lines="1"
            android:text="网络歌曲"
            android:textSize="20sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:background="#FFFFFF" />

</RelativeLayout>