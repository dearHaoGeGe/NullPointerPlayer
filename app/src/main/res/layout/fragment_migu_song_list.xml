<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#84C6F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_net_song_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/btn_back_to_meun_focus" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView_net_song_bar_title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_toEndOf="@+id/imageView_net_song_back"
            android:layout_toRightOf="@+id/imageView_net_song_back"
            android:text=" "
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView_net_song_share"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_operator_share" />

    </RelativeLayout>

    <com.my.nullpointerplayer.custom.PullToZoomListView
        android:background="#FFFFFF"
        android:id="@+id/pullListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"/>

</RelativeLayout>